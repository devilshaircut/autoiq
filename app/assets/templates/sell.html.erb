<div id="ns-scroll">

  <section class="ns-section-main background-blue">
    <div class="ns-section-wrapper">
      <div id="vin">
        <h3 class="title">Vin Number</h3>
        <input type="text" class="ns-section-input" placeholder="Enter Vin Number">
      </div>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-blue -->

  <section class="ns-section-main background-red">
    <div class="ns-section-wrapper">
      <h3 class="title">Options/Trim</h3>
      <div id="options">
        <select id="trim" class="ns-section-input">
          <option value="0">Prestige</option>
          <option value="1">Premium</option>
          <option value="2">Standard</option>
        </select>
      </div>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-red -->

  <section class="ns-section-main background-yellow">
    <div class="ns-section-wrapper">
      <div id="mileage">
        <h3 class="title">Mileage</h3>
        <input type="text" class="ns-section-input" placeholder="Enter Mileage">
      </div>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-yellow -->


  <section class="ns-section-main background-black">
    <div class="ns-section-wrapper">
      <h3 class="title">Condition:</h3>
        <ul id="wrapper">
          <li><%= image_tag "acura.jpg"%><p>Damaged</p></li>
          <li><%= image_tag "acura.jpg"%><p>Roughly</p></li>
          <li><%= image_tag "acura.jpg"%><p>Average</p></li>
          <li><%= image_tag "acura.jpg"%><p>Clean</p></li>
          <li><%= image_tag "acura.jpg"%><p>Outstanding</p></li>
        </ul>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-black -->

  <section class="ns-section-main background-yellow">
    <div class="ns-section-wrapper">
      <div id="zipcode">
        <h3 class="title">Zipcode</h3>
        <input type="text" class="ns-section-input" placeholder="Enter your Zipcode">
      </div>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-yellow -->

  <section class="ns-section-main background-red">
    <div class="ns-section-wrapper">
      <div class="ns-section-wrapper">
        <div id="submit">
          <a href="#" class="ns-button ns-button-red ns-button-cta">See Your Results</a>
        </div>
      </div>
    </div>
    <!-- .ns-section-wrapper -->
  </section>
  <!-- .ns-section-main .background-red -->

</div>
<!-- #ns-scroll -->

